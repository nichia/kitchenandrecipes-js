    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <%= render partial: "shared/navbar" %>

    <div class="container">
      <%= render partial: "shared/messages" %>
      <%= yield %>
    </div>

    <%= render partial: "shared/footer" %>
  </body>
</html>