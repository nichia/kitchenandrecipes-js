<!-- /recipes/_form -->

<div class="container">
  <h2 class="text-center">Review Recipe</h2>
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="form-group">
        <br></br>
        <%= form_for ([recipe, review]) do |f| %>
          <%= f.collection_select :rating, [1, 2, 3, 4, 5], :to_i, :to_i, {prompt: "Rate recipe:"}, class: "form-control" %> <br>
          <%= f.label :comment, "Comments:"  %>
          <%= f.text_area :comment, maxlength: 128, class: "form-control" %><br></br>
          <%= f.submit "Review", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
</div> <!-- Container -->